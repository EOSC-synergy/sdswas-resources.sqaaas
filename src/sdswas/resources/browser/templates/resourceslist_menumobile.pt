<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="sdswas.resources">

<metal:row define-macro="menu" i18n:domain="sdswas.resources">

    <!-- Resources filter menu on mobile -->
    <div id="resources-filter-menu-mobile" class="filter-menu-mobile">

        <!-- Filter btn with submenu -->
        <div class="filter-btns-container-mobile">

            <button id="main-filter-btn" class="main-filter-btn btn rounded-0" type="button"
                data-value="publications">
                <div class="btn-g">
                    <p class="btn-text">Publications</p>
                    <i class="btn-icon icon-sort-down"></i>
                </div>
            </button>

            <!-- Filter Submenu -->
            <ul class="filter-submenu">

                <li class="filter-submenu-btn-container">
                    <button id="publications-btn-mobile" class="filter-submenu-btn btn rounded-0"
                        type="button" data-value="publications">
                        <div class="btn-g">
                            <p>Publications</p>
                        </div>
                    </button>
                </li>

                <li class="filter-submenu-btn-container">
                    <button id="past-events-btn-mobile" class="filter-submenu-btn btn rounded-0"
                        type="button" data-value="genericevents">
                        <div class="btn-g">
                            <p>Past events</p>
                        </div>
                    </button>
                </li>

                <li class="filter-submenu-btn-container">
                    <button id="webinars-btn-mobile" class="filter-submenu-btn btn rounded-0"
                        type="button" data-value="webinars">
                        <div class="btn-g">
                            <p>Webinars</p>
                        </div>
                    </button>
                </li>

                <li class="filter-submenu-btn-container">
                    <button id="technical-reports-btn-mobile" class="filter-submenu-btn btn rounded-0"
                        type="button" data-value="techreports">
                        <div class="btn-g">
                            <p>Technical reports</p>
                        </div>
                    </button>
                </li>

                <li class="filter-submenu-btn-container">
                    <button id="dissemination-btn-mobile" class="filter-submenu-btn btn rounded-0"
                        type="button" data-value="disseminations">
                        <div class="btn-g">
                            <p>Dissemination</p>
                        </div>
                    </button>
                </li>

            </ul> <!-- Filter Submenu ends -->

        </div> <!-- Filter btn with submenu ends -->

    </div> <!-- Resources filter menu on mobile ends -->

</metal:row>
 </html>