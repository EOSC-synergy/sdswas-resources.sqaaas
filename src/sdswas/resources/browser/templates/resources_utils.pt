 <html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
 >

<metal:row define-macro="filedownload" i18n:domain="sdswas.resources">
    <h2 class="modwin-cta-comp-title" tal:content="title"/>
    <a class="outlined-cta"
        href="${context/absolute_url}/@@download/document/${view/w/document/filename}"
        target="_self">
      <p>DOWNLOAD</p>
        <i class="icon-download"></i>
    </a>
</metal:row>

<metal:row define-macro="resource_with_preview" i18n:domain="sdswas.resources">
    <!-- Card content -->
  <div class="resources-card-content" tal:attributes="data-title python:item['title']">

    <a class="resources-card-title js-card-trigger"><h3 tal:content="python:item['title']"/></a>
    <div class="resources-card-small-info"><p tal:content="small_info"></p></div>
    <a class="resources-text-link js-card-trigger hide-el-on-mobile" title="Preview this resource"><p>PREVIEW</p></a>

 </div><!-- Card content ends -->

  <!-- Resources card cta -->
  <a class="resources-card-cta" target="_self" tal:attributes="href python:item['downloadfile_url']">

    <div class="card-cta-icon"><i class="icon-pdf"></i></div>
    <div class="card-cta-text"><p>Download</p><i class="icon-download"></i></div>

  </a><!-- Resources card cta ends -->
</metal:row>

<metal:row define-macro="resource_without_preview" i18n:domain="sdswas.resources">

  <!-- Card content -->
  <div class="resources-card-content">

    <a class="resources-card-title js-card-trigger"><h3 tal:content="python:item['title']"/></a>
    <div class="resources-card-small-info"><p tal:content="small_info"></p></div>

 </div><!-- Card content ends -->

  <!-- Resources card cta -->
  <a class="resources-card-cta js-card-trigger">

    <div class="card-cta-icon"><i class="icon-event"></i></div>
    <div class="card-cta-text"><p>Read more</p><i class=""></i></div>

  </a><!-- Resources card cta ends -->
</metal:row>

<metal:row define-macro="breadcumb" i18n:domain="sdswas.resources">

  <!--Resource breadcrum btn -->
  <section>
    <div class="modwin-title-wrap bg-color-white modwin-padding-t modwin-padding-lr">
      <a class="modwin-back-link" tal:attributes="href url">
        <p class="breadcrum-text"
            tal:content="string:< Back to Resources"></p>
      </a>
    </div><!-- Resource breadcrum btn ends -->
  </section>

</metal:row>

</html>