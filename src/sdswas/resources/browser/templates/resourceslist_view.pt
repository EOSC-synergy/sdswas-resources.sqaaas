<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="sdswas.resources">

<body>
<metal:javascriptslot fill-slot="javascript_head_slot">
    <script type="text/javascript" tal:define="navroot context/@@plone_portal_state/navigation_root_url"
            tal:attributes="src string:${navroot}/++resource++sdswas.resources/js/resources.js"/>
</metal:javascriptslot>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">

      <!--Page title-->
      <metal:macro use-macro="context/resources_utils/macros/page-title"
          tal:define="page_title context/title"/>
      <!--Page title ends-->

      <!-- Resources filter menu -->
      <section id="resources-filter-menu-section" class="bg-color-grey-light"
              tal:define="listbytype_viewname python:view.listbytype_viewname()">

        <div class="resources-filter-menu-wrap main-wrap main-padding">
          <!--<metal:macro use-macro="context/resourceslist_menumobile/macros/menu"/>-->

          <!-- Resources filter menu on mobile -->
          <div id="resources-filter-menu-mobile" class="filter-menu-mobile">

            <p>Filter by: </p>

            <!-- Filter btn with submenu -->
            <div class="filter-btns-container-mobile">

              <button id="main-filter-btn" class="main-filter-btn btn rounded-0" type="button"
                data-value="publications"
                data-contents-url="${listbytype_viewname}">
                <div class="btn-g">
                  <p class="btn-text">Publications</p>
                  <i class="btn-icon icon-sort-down"></i>
                </div>
              </button>

              <!-- Filter Submenu -->
              <ul class="filter-submenu">

                <li class="filter-submenu-btn-container">
                  <button id="publications-btn-mobile" class="filter-submenu-btn btn rounded-0" type="button"
                          data-contents-url="${listbytype_viewname}"
                          data-value="publications">
                    <div class="btn-g">
                      <p>Publications</p>
                    </div>
                  </button>
                </li>

                <li class="filter-submenu-btn-container">
                  <button id="past-events-btn-mobile" class="filter-submenu-btn btn rounded-0" type="button"
                          data-contents-url="${listbytype_viewname}"
                          data-value="genericevents">
                    <div class="btn-g">
                      <p>Past events</p>
                    </div>
                  </button>
                </li>

                <li class="filter-submenu-btn-container">
                  <button id="webinars-btn-mobile" class="filter-submenu-btn btn rounded-0" type="button"
                          data-contents-url="${listbytype_viewname}"
                          data-value="webinars">
                    <div class="btn-g">
                      <p>Webinars</p>
                    </div>
                  </button>
                </li>

                <li class="filter-submenu-btn-container">
                  <button id="technical-reports-btn-mobile" class="filter-submenu-btn btn rounded-0" type="button"
                        data-contents-url="${listbytype_viewname}"
                        data-value="techreports">
                    <div class="btn-g">
                      <p>Technical reports</p>
                    </div>
                  </button>
                </li>

                <li class="filter-submenu-btn-container">
                  <button id="dissemination-btn-mobile" class="filter-submenu-btn btn rounded-0" type="button"
                        data-contents-url="${listbytype_viewname}"
                        data-value="disseminations">
                    <div class="btn-g">
                      <p>Disseminations</p>
                    </div>
                  </button>
                </li>

              </ul> <!-- Filter Submenu ends -->

            </div> <!-- Filter btn with submenu ends -->

          </div> <!-- Resources filter menu on mobile ends -->

             <!-- Resources filter menu on desktop -->
            <ul id="resources-filter-menu-desktop" class="filter-menu-desktop">

                <p>Filter by: </p>

                <!-- Btn -->
                <li class="filter-btn-container">
                    <button id="publications" class="filter-btn-desktop filter-btn-desktop-selected btn" type="button"
                    data-contents-url="${listbytype_viewname}"
                    data-value="publications">Publications</button>
                </li>

                <!-- Btn -->
                <li class="filter-btn-container">
                    <button class="filter-btn-desktop btn" type="button"
                    data-contents-url="${listbytype_viewname}"
                    data-value="genericevents">Past Events</button>
                </li>

                <!-- Btn -->
                <li class="filter-btn-container">
                    <button class="filter-btn-desktop btn" type="button"
                     data-contents-url="${listbytype_viewname}"
                     data-value="webinars">Webinars</button>
                </li>

                <!-- Btn -->
                <li class="filter-btn-container">
                    <button class="filter-btn-desktop btn" type="button"
                    data-contents-url="${listbytype_viewname}"
                    data-value="techreports">Technical reports</button>
                </li>

                <!-- Btn -->
                <li class="filter-btn-container">
                    <button class="filter-btn-desktop btn" type="button"
                    data-contents-url="${listbytype_viewname}"
                    data-value="disseminations">Disseminations</button>
                </li>
            </ul><!-- Resources filter menu on desktop ends -->
        </div>
      </section><!-- Resources filter ends -->

      <!-- Resources cards -->
      <section class="resources-cards bg-color-white">

        <!-- Resources cards wrap -->
        <div class="main-wrap main-padding">
        </div>
        <!-- Resources cards carpet ends -->

        <!-- Loader overlay -->
          <metal:macro use-macro="context/resources_utils/macros/preloader"/>
        <!-- Loader overlay ends -->

      </section><!-- Resources cards carpet ends -->


  </tal:main-macro>
</metal:main>
</body>
</html>