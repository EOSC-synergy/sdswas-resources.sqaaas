 <html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
 >

<metal:row define-macro="filedownload" i18n:domain="sdswas.events">
    <div class="download-document">
        <h4 tal:content="title"></h4>
        <div class="button-download-default">
            <a href="${context/portal/absolute_url}/@@download/document/${view/w/document/filename}">
            <i class="fa fa-cloud-download-alt"></i>
            <span>DOWNLOAD</span>
            </a>
        </div>
    </div>
</metal:row>

<metal:row define-macro="title" i18n:domain="sdswas.resources">

  <div class="card-title">
    <h3 class="truncate-overflow-4">
      <a href="#" class="open_full_view" tal:content="title"
        tal:attributes="data-url absolute_url;
                        data-goback-link go_back_link_name;
                        data-title title;
                        data-target target;
                        data-toggle string:modal;
                        data-is-document is_document">
    </a></h3>
  </div>
</metal:row>

<metal:row define-macro="read_more_button"  i18n:domain="sdswas.events">
  <div class="button button-dark">
    <a href="#" class="open_full_view color-yellow"
            tal:attributes="data-url absolute_url;
                            data-goback-link go_back_link_name;
                            data-title title;
                            data-target target;
                            data-toggle string:modal">READ MORE</a>
  </div>
</metal:row>

<metal:row define-macro="preview_link">
  <p> <a href="#" class="open_full_view color-yellow"
            tal:attributes="data-url absolute_url;
                            data-goback-link go_back_link_name;
                            data-title title;
                            data-target target;
                            data-toggle string:modal;">PREVIEW</a></p>
</metal:row>

<metal:row define-macro="resource_with_preview" i18n:domain="sdswas.resources">
  <!-- Card content -->
  <div class="resource-card-content"
    tal:define="absolute_url python:item['absolute_url'];
                        title python:item['title'];
                        target string: #full_view;
                        is_document string:true">

      <metal:macro use-macro="context/resourceslist_utils/macros/title" />


      <div class="card-date">
        <p tal:content="python:item['creation_date']"></p>
      </div>

      <div class="card-preview-btn" title="Preview this resource">
        <metal:macro use-macro="context/resourceslist_utils/macros/preview_link" />
      </div>

  </div><!-- Card content ends -->

  <!-- Card cta -->
  <div class="resource-card-cta">
      <div class="resource-type-icon-container">
          <i class="resource-type-icon icon-pdf"></i>
      </div>
      <div class="cta">
          <a
            tal:define=" doc_url python:item['downloadfile_url']"
            tal:attributes="href doc_url">
            <p class="cta-text">Download</p>
            <i class="cta-icon icon-download"></i>
          </a>
      </div>
  </div><!-- Card cta ends -->
</metal:row>
<metal:row define-macro="resource_without_preview">
  <div
      tal:define="absolute_url python:item['absolute_url'];
                title python:item['title'];
                target string: #full_view;
                is_document string:false">
    <div class="griditemcontent">
      <metal:macro use-macro="context/resourceslist_utils/macros/title" />
      <p tal:content="python:item['creation_date']"></p>
    </div>
    <div class="griditemfooter">
      <metal:macro use-macro="context/resourceslist_utils/macros/read_more_button" />
    </div>
  </div>
</metal:row>

<metal:row define-macro="event_teaser" i18n:domain="sdswas.resources">
  <div
      tal:define="absolute_url python:item['absolute_url'];
                  title python:item['title'];
                  target string: #full_view;
                  is_document string:false">
    <div class="griditemcontent">
        <metal:macro use-macro="context/resourceslist_utils/macros/title" />
        <p tal:content="python:item['start']"></p>
    </div>
    <div class="griditemfooter">
      <metal:macro use-macro="context/resourceslist_utils/macros/read_more_button" />
    </div>
  </div>
</metal:row>

<metal:row define-macro="preloader" i18n:domain="sdswas.resources">
  <div id="preloader">
    <div class="modal-preloader_status">
      <div class="modal-preloader_spinner">
        <div class="d-flex justify-content-center">
          <div class="spinner-border" role="status"></div>
        </div>
      </div>
    </div>
  </div>
</metal:row>



</html>