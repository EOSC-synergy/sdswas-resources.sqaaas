<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n">

<!-- Publications Cards container -->
<tal tal:define="b_start python:0;
                b_start request/b_start | b_start;
                batch python: view.publication_resources( b_size=12, b_start=b_start);">
        <div id="publications" class="resources-cards-container main-container">
                <tal:row tal:repeat="item batch">
                        <!-- Card -->
                        <div class="resources-card  card-with-embedded-doc"
                                tal:define="small_info python:item['year'];
                                        url python:item['absolute_url']"
                                tal:attributes="data-breadcumb-text string:< BACK TO PUBLICATIONS;
                                                data-url string:${url}/document_modal;
                                                data-title python:item['title']">

                                <metal:macro use-macro="context/resources_utils/macros/resource_with_preview" />
                        </div>
                        <!-- Card container ends -->
                </tal:row>
        </div>
        <div metal:use-macro="context/batch_macros/macros/navigation" />
</tal>
</html>