<?xml version="1.0" encoding="UTF-8"?>
<model xmlns="http://namespaces.plone.org/supermodel/schema"
xmlns:easyform="http://namespaces.plone.org/supermodel/easyform"
xmlns:form="http://namespaces.plone.org/supermodel/form"
xmlns:i18n="http://xml.zope.org/namespaces/i18n"
xmlns:lingua="http://namespaces.plone.org/supermodel/lingua"
xmlns:marshal="http://namespaces.plone.org/supermodel/marshal"
xmlns:security="http://namespaces.plone.org/supermodel/security"
xmlns:users="http://namespaces.plone.org/supermodel/users"
xmlns:indexer="http://namespaces.plone.org/supermodel/indexer">
   <schema based-on="plone.supermodel.model.Schema">
      <field name="full_description" type="plone.app.textfield.RichText" indexer:searchable="true">
         <description>This is the text to be displayed in the full view of the content</description>
         <title>Full description</title>
      </field>
      <field name="document" type="plone.namedfile.field.NamedBlobFile">
         <description />
         <required>False</required>
         <title>Document</title>
      </field>
      <field name="image" type="plone.namedfile.field.NamedBlobImage">
         <description />
         <required>False</required>
         <title>Image</title>
      </field>
      <field name="embedded_url" type="zope.schema.URI"  indexer:searchable="true">
         <description/>
         <required>False</required>
         <title>Embedded media URL</title>
      </field>
      <field name="year" type="zope.schema.Date" indexer:searchable="true">
         <description>Only the year of the date will be used. It will be displayed in the card and used as the first sorting criteria of the Resources grid</description>
         <required>False</required>
         <title>Year</title>
      </field>
   </schema>
</model>